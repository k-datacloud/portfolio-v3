---
import "../styles/info.scss";
import BaseLayout from "../layouts/BaseLayout.astro";
import Cta from "../components/Cta.astro";
---

<BaseLayout
  bodyClass="info"
  title="My Portfolio | "
  description="you can check my details here"
>
  <section class="p-info-kv">
    <div class="l-wrapper p-info-kv__wrapper">
      <div class="p-info-kv__container">
        <div class="p-info-kv__top">
          <div class="kv-top-bar">
            <div class="c-location-time js-location-time">
              <div class="c-location-time__location">
                <span class="c-text">Tokyo, Japan</span>
              </div>
              <div class="c-location-time__time">
                <span class="c-text js-time-hour"></span>
                <span class="c-text blink">:</span>
                <span class="c-text js-time-minute"></span>
              </div>
              <div>
                <span class="c-text js-time-ampm"></span>
              </div>
            </div>
            <div class="c-nameplate">
              <span class="c-text">K.S</span>
              <span class="c-text is-pc">Developer, Designer</span>
            </div>
          </div>
        </div>
        <div class="p-info-kv__main">
          <h2 class="c-heading p-info-kv__title">in/fo</h2>
        </div>
        <div class="p-info-kv__badge">
          <span class="c-text scrolldown__text">Scroll Down</span>
        </div>
      </div>
    </div>
  </section>
  <section class="p-info-profile">
    <div class="l-wrapper p-info-profile__wrapper">
      <div class="p-info-profile__image">
        <div class="l-image">
          <img src="/img/profile.jpg" alt="" />
        </div>
        <div class="p-info-profile__info">
          <h2 class="p-info-profile__tag">Kaisei Sadatoki</h2>
          <span class="p-info-profile__tag">2002-</span>
        </div>
      </div>
      <p class="p-info-profile__description c-text">
        I’m 22 years old and from Japan. Currently, I’m based in Hyogo.
        <br class="br-pc" />I enjoy creating things and exploring new ideas,
        whether it’s
        <br class="br-pc" />through design, code, or just experimenting with
        something
        <br class="br-pc" />new. I like trying out different approaches and
        seeing where
        <br class="br-pc" />curiosity takes me.
      </p>
    </div>
  </section>
  <section class="p-info-archive">
    <div class="l-wrapper p-info-archive__wrapper">
      <h2 class="p-info-archive__title">archive</h2>
      <h3 class="c-lead p-info-archive__lead">
        Just a few more
        <br />details about me
        <br />and this site.
      </h3>
      <div class="archive">
        <article class="archive__item">
          <div class="archive__heading">
            <h4 class="c-text archive__title">
              <span class="circle"></span>skills
            </h4>
          </div>
          <div class="archive__label">
            <span class="c-text archive__tag">technical</span>
            <span class="c-text archive__tag">language</span>
          </div>
          <div class="archive__content">
            <p class="c-text">HTML, (S)CSS, JavaScript, GSAP, Astro, Figma</p>
            <p class="c-text">Japanese (Native Language), English</p>
          </div>
        </article>
        <article class="archive__item">
          <div class="archive__heading">
            <h4 class="c-text archive__title">
              <span class="circle"></span>site info
            </h4>
          </div>
          <div class="archive__label">
            <span class="c-text archive__tag">development</span>
            <span class="c-text archive__tag">image</span>
          </div>
          <div class="archive__content">
            <p class="c-text">Astro, GSAP, lenis.js</p>
            <p class="c-text">unsplash, original</p>
          </div>
        </article>
        <article class="archive__item">
          <div class="archive__heading">
            <h4 class="c-text archive__title">
              <span class="circle"></span>achievement
            </h4>
          </div>
          <div class="archive__label">
            <span class="c-text archive__tag">award</span>
          </div>
          <div class="archive__content">
            <p class="c-text">Not yet ―</p>
          </div>
        </article>
        <article class="archive__item">
          <div class="archive__heading">
            <h4 class="c-text archive__title">
              <span class="circle"></span>personal
            </h4>
          </div>
          <div class="archive__label">
            <span class="c-text archive__tag">curiosity</span>
          </div>
          <div class="archive__content">
            <p class="c-text">Learning English</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <Cta
    buttonText="Say hello"
    buttonLink="mailto:k25ts09@outlook.jp"
    title="Let's Collaborate"
    leadTop="(anything i can help with?)"
    leadBottom={`don't be shy —<br class='br-sp' />I'd love to hear from you.`}
    description={`I'm looking forward to new conversations,<br />new ideas, and building something together.`}
    background={false}
    icon="/img/arrow-right-top.svg"
  />
</BaseLayout>
